<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="45dp">
    <!-- Upload Photo Buttons -->
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="75dp">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/ic_plus"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonUpload1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="75dp">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/ic_plus"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonUpload2"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:background="@android:color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:layout_marginStart="265dp"
            android:layout_marginTop="75dp">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/ic_plus"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonUpload3"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:background="@android:color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="245dp">
            <ImageView
                android:id="@+id/image4"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/ic_plus"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonUpload4"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:layout_marginTop="245dp"
            android:layout_marginLeft="210dp">
            <ImageView
                android:id="@+id/image5"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/ic_plus"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonUpload5"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Upload Your Photo Text -->
    <TextView
        android:id="@+id/textViewUploadYourPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Upload your photos"
        android:textColor="@color/main"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Back and Confirm Buttons -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_outline_background_blue"
        android:text="@string/back_button"
        android:textColor="#2C59CC"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_bg_gray"
        android:text="@string/next_button"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"/>

</RelativeLayout>
